@model List<Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        @{if (TempData["info"] != null)
            {
                <div class="alert alert-success alert-block fade in">
                    <button data-dismiss="alert" class="close close-sm" type="button">
                        <i class="icon-remove"></i>
                    </button>
                    <h4>
                        <i class="icon-ok-sign"></i>
                        Başarılı!
                    </h4>
                    <p>@TempData["info"]</p>
                </div>
            }

            else if (TempData["error"] != null)
            {
                <div class="alert alert-danger alert-block fade in">
                    <button data-dismiss="alert" class="close close-sm" type="button">
                        <i class="icon-remove"></i>
                    </button>
                    <h4>
                        <i class="icon-remove"></i>
                        Hata!
                    </h4>
                    <p>@TempData["error"]</p>
                </div>
            }
        }
        <section class="panel">
            <header class="panel-heading">
                <div class="row">
                    <div class="col-md-9">
                        <h5 style="color:white">Category List</h5>
                    </div>
                    <div class="col-md-3">

                        @Html.ActionLink("Film Ekle", "AddMovie", null, null, new { @class = "btn btn-danger pull-right" })
                    </div>
                </div>

            </header>
            <br />
            <table class="table table-striped table-advance table-hover" style="background-color:white">
                <thead>
                    <tr>
                        <th>Kategori Adı</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var movie in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(movie.MovieName, "MoviesAndCategories", new { id = movie.MovieID })</td>

                            <td>
                                <a href="/Admin/Category/UpdateCategory/@movie.MovieID" class="btn btn-primary">
                                    Güncelle
                                </a>
                                <a href="/Admin/Category/DeleteCategory/@movie.MovieID" class="btn btn-danger">
                                    Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>

